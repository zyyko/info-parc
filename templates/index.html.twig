                      <canvas id="traffic-chart"></canvas>
                    </div>
                    <div id="traffic-chart-legend" class="rounded-legend legend-vertical legend-bottom-left pt-4"></div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Derniers problèmes signalés</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th> Utilisateur </th>
                            <th> Description </th>
                            <th> Status </th>
                            <th> Date de publication </th>
                            <th> Identifiant de suivi </th>
                          </tr>
                        </thead>
                        <tbody>
                          {% if lastTenIncidents is not empty %}
                            {% for incidentArray in lastTenIncidents %}
                              {% set incident = incidentArray[0] %}
                              <tr>
                                <td>
                          <img 
                            src="{{ incident.reportedBy and incident.reportedBy.userImage ? asset(incident.reportedBy.userImage) : asset('assets/images/faces/face1.jpg') }}" 
                            class="me-2" 
                            alt="image" 
                            style="width: 30px; height: 30px; object-fit: cover; border-radius: 50%;" />
                          {{ incident.reportedBy ? incident.reportedBy.firstName ~ ' ' ~ incident.reportedBy.lastName : 'Unknown' }}
                        </td>

                                <td>{{ incident.description }}</td>
                                <td>
                                  {% set statusClass = {
                                    'active': 'badge-gradient-success',
                                    'inactive': 'badge-gradient-secondary',
                                    'repairing': 'badge-gradient-warning'
                                  }[incident.status|lower]|default('badge-gradient-secondary') %}
                                  <label class="badge {{ statusClass }}">{{ incident.status|capitalize }}</label>
                                </td>
                                <td>{{ incident.createdAt ? incident.createdAt|date('M d, Y') : '' }}</td>
                                <td>{{ incident.trackingId }}</td>
                              </tr>
                            {% endfor %}
                          {% else %}
                            <tr><td colspan="5" class="text-center">No incidents found.</td></tr>
                          {% endif %}
                        </tbody>

                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
