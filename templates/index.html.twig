{% block javascripts %}
    <script>
  window.activeCount = {{ workingCount }};
  window.inactiveCount = {{ inactiveCount }};
  window.repairingCount = {{ repairingCount }};
  window.assignedCount = {{ assignedCount }};
  window.unassignedCount = {{ unassignedCount }}
  ;
  window.deviceTypes = [];
  window.devicePercentages = [];

  {% for type, percent in percentagesDevices %}
    window.deviceTypes.push("{{ type }}");
    window.devicePercentages.push({{ percent }});
  {% endfor %}
</script>
>
